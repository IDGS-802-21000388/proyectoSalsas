<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    tools:context=".presentation.ProductionActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/order_title_wear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedido de Aylin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black" />

                <!-- Customer Name and Progress Status Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/customer_name_wear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diego"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/status_point_wear"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/circle_pending"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Timer -->
                <TextView
                    android:id="@+id/timer_wear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="8:39"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black" />

                <!-- Instructions -->
                <TextView
                    android:id="@+id/instructions_wear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="."
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black" />

                <!-- Next Button -->
                <Button
                    android:id="@+id/next_button_wear"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:text="Siguiente"
                    android:textSize="10sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorAccent" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.wear.widget.BoxInsetLayout>
